module Common

lexical sorts
  ID 
  INT 
  STRING
  STRING_CHAR 
  BACKSLASH_CHAR
  COMMENT_CHAR 
  INSIDE_COMMENT
  NEWLINE_EOF 
  EOF 
  PHYSICAL_LINE 
  NEWLINE

lexical syntax

  PHYSICAL_LINE	 	= [\n\r]
  NEWLINE 			= PHYSICAL_LINE

  ID               	= [a-zA-Z] [a-zA-Z0-9]*
  ID				= Keyword {reject}
  BOOLEAN_LIT		= "True"
  BOOLEAN_LIT		= "False"

  INT              = "-"? [0-9]+

  BACKSLASH_CHAR   = "\\"
  STRING_CHAR      = ~[\"\n]
  STRING_CHAR      = "\\\""
  STRING_CHAR      = BACKSLASH_CHAR
  STRING           = "\"" STRING_CHAR* "\""

  LAYOUT           = [\ \t\n\r]
  
  COMMENT_CHAR     = "#"
  //LAYOUT           = COMMENT_CHAR INSIDE_COMMENT* NEWLINE
  //INSIDE_COMMENT   = ~[NEWLINE]
  //INSIDE_COMMENT   = COMMENT_CHAR

  LAYOUT           = "#" ~[\n\r]* NEWLINE_EOF
  NEWLINE_EOF      = [\n\r]
  NEWLINE_EOF      = EOF
  EOF              =



lexical restrictions

  // Ensure greedy matching for lexicals
  
  //COMMENT_CHAR    -/- [\/]
  COMMENT_CHAR    -/- [\#]
  INT             -/- [0-9]
  ID              -/- [a-zA-Z0-9\_]
  
  // EOF may not be followed by any char
  
  EOF             -/- ~[]
  
  // Backslash chars in strings may not be followed by " 
  
  BACKSLASH_CHAR  -/- [\"]

context-free restrictions

  // Ensure greedy matching for comments
  
  LAYOUT? -/- [\ \t\n\r]
  //LAYOUT? -/- [\/].[\*]
  LAYOUT? -/- [\#]
  
  
